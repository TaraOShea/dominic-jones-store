<header role='banner' id='header' data-component='header'>
  <div class='outer'>
      <div class="menu">
        {% assign header_menu = section.settings.header_menu %}
        <div id="mobile-trigger">
          <button id="hamburger">
              <div class="hamburger-inner"></div>
          </button>
        </div>
      </div>
      <h1 class="logo" itemscope itemtype='http://schema.org/Organization'>
        <a href='/'>Dominic Jones</a>
      </h1>
      <div class='cart-header'>
        <div class="cart-flex">
          <div class="cart-flex">
            <span class="cart-swatches cart-flex">
              <div class="cart-swatch light" data-colour="light"></div>
              <div class="cart-swatch dark" data-colour="dark"></div>
            </span>
            <a class="cart-flex js-cart-drawer-toggle" href='/cart'>
